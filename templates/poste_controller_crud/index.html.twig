{% extends 'base.html.twig' %}

{% block title %}Poste index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Poste index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Rôle</th>
                    <th>Site</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for poste in postes %}
                <tr>
                   
                    <td>{{ poste.agent.nom }}</td>
                    <td>{{ poste.agent.prenom }}</td>
                    <td>   
                            {% for role in poste.agent.roles %}
                                {{ role }}
                            {% endfor %}
                    </td>
                    <td>{{ poste.site.nom }}</td>
      
                    <td>
                        <a href="{{ path('app_poste_controller_crud_show', {'id': poste.id}) }}">show</a>
                        <a href="{{ path('app_poste_controller_crud_edit', {'id': poste.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_poste_controller_crud_new') }}">Create new</a>
    </div>
{% endblock %}
