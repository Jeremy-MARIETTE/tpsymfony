{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
<div class="container">

    <table class="table">
        <h1 class="text-center">Votre compte pro</h1>
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.adresse }}</td>
                <td>{{ entreprise.cp }}</td>
                <td>{{ entreprise.ville }}</td>
                <td>
                    <a href="{{ path('app_entreprise_controller_crud_show', {'id': entreprise.id}) }}"><i class="fas fa-eye fa-lg"></i></a>
                    <a href="{{ path('app_entreprise_controller_crud_edit', {'id': entreprise.id}) }}"><i class="fas fa-edit fa-lg"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    Nombre de comptes : {{ entreprises|length }} </br>

    {% if entreprises|length < 1 %}

    <a class="btn btn-success" href="{{ path('app_entreprise_controller_crud_new') }}">Cr√©ez votre compte pro</a>

    {% endif %}
</div> 
{% endblock %}
