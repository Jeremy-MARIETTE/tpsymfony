{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">

    <div class="row">
        <div class="col-md-12">
        
         <h1 class="text-center">Messagerie</h1>

         <h2 class="text-center">{{message.title}}</h2>
         <p>{{message.createdAt|date('d/m/Y H:m:s')}}</p>
            <p>De : {{message.sender.prenom}} {{message.sender.nom}}</p>

         <div class="text-justify">{{message.message}}</div>
            


        


        
  </div>
</div>
</div>
{% endblock %}
