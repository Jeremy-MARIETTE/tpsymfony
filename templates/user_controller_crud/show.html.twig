{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">{{user.nom |upper}} {{user.prenom |lower}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                   <td>
                    {% if user.roles[0] == "ROLE_EMPLOYE" %}
                        Agent
                    {% elseif user.roles[0] == "ROLE_UTILISATEUR" %}
                        Client
                    {% elseif user.roles[0] == "ROLE_USER" %}
                        Administateur
                    {% endif %}
                </td>
            </tr>
         
            <tr>
                <th>Créé le</th>
                <td>{{ user.createdAt ? user.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_user_controller_crud_index') }}">Retour</a>

    <a class="btn btn-primary" href="{{ path('app_user_controller_crud_edit', {'id': user.id}) }}">Editer</a>

    {{ include('user_controller_crud/_delete_form.html.twig') }}
    </div>
{% endblock %}
