                            <td>
                                d√©part : <span class="coord-depart" data-lat="{{ agents.LatDebut }}" data-lng="{{ agents.LngDebut }}" data-prenom="{{ agents.idAgent.prenom }}" data-nom="{{ agents.idAgent.nom }}">{{ agents.LatDebut }} {{ agents.LngDebut }} {{ agents.idAgent.prenom }} {{ agents.idAgent.nom }}</span>
