{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Entreprise</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ entreprise.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ entreprise.adresse }}</td>
            </tr>
             <tr>
                <th>Ville</th>
                <td>{{ entreprise.ville }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ entreprise.cp }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_entreprise_controller_crud_index') }}">Retour</a>

    <a class="btn btn-success" href="{{ path('app_entreprise_controller_crud_edit', {'id': entreprise.id}) }}">Editer</a>

    </br>
    {{ include('entreprise_controller_crud/_delete_form.html.twig') }}
    </div>
{% endblock %}
