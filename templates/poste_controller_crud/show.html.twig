{% extends 'base.html.twig' %}

{% block title %}Poste{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Poste</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Role</th>
                    <th>Site</th>

                    <tr>
                    <td>{{ poste.agent.nom }}</td>
                    <td>{{ poste.agent.prenom }}</td>
                    <td>
                     {% if poste.agent.roles[0] == "ROLE_EMPLOYE" %}
                        Agent
                    {% elseif poste.agent.roles[0] == "ROLE_UTILISATEUR" %}
