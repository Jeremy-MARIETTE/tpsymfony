                    </td>
                    <td>{{ poste.site.nom }}</td>
                    </tr>
                    
                </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_poste_controller_crud_index') }}">Retour</a>

        <a class="btn btn-primary" href="{{ path('app_poste_controller_crud_edit', {'id': poste.id}) }}">Editer</a>
       
        {{ include('poste_controller_crud/_delete_form.html.twig') }}
    </div>
{% endblock %}
