{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">

    <div class="row">
        <div class="col-md-12">
        
         <h1 class="text-center">Messages reçus</h1>
            <p>Nombre de messages reçus : {{app.user.received|length}} </p>


        

            <table class="table">
  <thead>
    <tr>
      <th scope="col">De</th>
      <th scope="col">Sujet</th>
      <th scope="col">Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
    <tbody>
 
            {% for message in app.user.received %}

            {% if message.isRead == 0 %}
                {% set bold = "fw-bold" %}
            {% else %}
                {% set bold = "" %}
            {% endif %}


           
    <tr>
      <td class="{{bold}}">{{message.sender.nom}}</td>
      <td class="{{bold}}">{{message.title}}</td>
      <td class="{{bold}}">{{message.createdAt|date('d/m/Y')}}</td>
      <td></td>
    </tr>       
                {% endfor %}
            </tbody>
          

        
  </div>
</div>
</div>
{% endblock %}
