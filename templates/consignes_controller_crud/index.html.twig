{% extends 'base.html.twig' %}

{% block title %}Consignes{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Consignes</h1>

             

        <table class="table">
            <thead>
                <tr>
                    <th>Site</th>
                    <th>Content</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for consigne in consignes %}
                <tr>
                    <td>{{ consigne.site.nom }}</td>
                    <td>{{ consigne.content }}</td>
                    <td>
                        <a href="{{ path('app_consignes_controller_crud_show', {'id': consigne.id}) }}"><i class="fas fa-eye fa-lg"></i></a>
                        <a href="{{ path('app_consignes_controller_crud_edit', {'id': consigne.id}) }}"><i class="fas fa-edit fa-lg"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune consigne.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if app.user.roles[0] == "ROLE_USER" %}

        <a class="btn btn-primary" href="{{ path('app_consignes_controller_crud_new') }}">Cr√©er une consigne</a>
        
        {% endif %}

        </div>
{% endblock %}
