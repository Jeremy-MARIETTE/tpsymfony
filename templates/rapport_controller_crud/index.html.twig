{% extends 'base.html.twig' %}

{% block title %}Rapport index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Rapport index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Auteur</th>
                    <th>Content</th>
                    <th>CreatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for rapport in rapports %}
                <tr>
                    <td>{{ rapport.id }}</td>
                    <td>{{ rapport.auteur }}</td>
                    <td>{{ rapport.content }}</td>
                    <td>{{ rapport.createdAt ? rapport.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_rapport_controller_crud_show', {'id': rapport.id}) }}">show</a>
                        <a href="{{ path('app_rapport_controller_crud_edit', {'id': rapport.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_rapport_controller_crud_new') }}">Create new</a>
        </div>
{% endblock %}
