{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">

    <div class="row">
        <div class="col-md-12">
        
         <h1 class="text-center">Elements envoyés</h1>
            <p>Nombre de messages envoyés : {{app.user.sent|length}} </p>


        

            <table class="table">
  <thead>
    <tr>
      <th scope="col">De</th>
      <th scope="col">Sujet</th>
      <th scope="col">Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
    <tbody>
 
            {% for message in app.user.sent %}

            {% if message.isRead == 0 %}
                {% set bold = "fw-bold" %}
            {% else %}
                {% set bold = "" %}
            {% endif %}


           
    <tr>
      <td class="{{bold}}">{{message.sender.prenom}} {{message.sender.nom}}</td>
      <td class="{{ bold }}"><a href="read/{{message.id}}">{{ message.title }}</a></td>

      <td class="{{bold}}">{{message.createdAt|date('d/m/Y')}}</td>
      <td>
        <a href="delete/{{message.id}}">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill text-danger" viewBox="0 0 16 16">
            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
          </svg>
        </a>
      </td>
    </tr>       
                {% endfor %}
            </tbody>
          

        
  </div>
</div>
</div>
{% endblock %}
