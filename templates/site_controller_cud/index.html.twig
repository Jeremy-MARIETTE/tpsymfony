{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Cr√©er un site</h1>

    <table class="table">
        <thead>
            <tr>
               
                <th>Nom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Cp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                
                <td>{{ site.nom }}</td>
                <td>{{ site.adresse }}</td>
                <td>{{ site.ville }}</td>
                <td>{{ site.cp }}</td>
                <td>
                    <a href="{{ path('app_site_controller_cud_show', {'id': site.id}) }}"><i class="fas fa-eye fa-lg"></i></a>
                    <a href="{{ path('app_site_controller_cud_edit', {'id': site.id}) }}"><i class="fas fa-edit fa-lg"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_site_controller_cud_new') }}">Ajouter un site</a>
    </div>
{% endblock %}
