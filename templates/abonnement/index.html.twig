{% extends 'base.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Abonnement</h1>

    <table class="table">
        <thead>
            <tr>
               
                <th>Nombre de licences</th>
                <th>Date de paiement</th>
                <th>Compte valide</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonnement in abonnements %}
            <tr>
                
                <td>{{ abonnement.nbLicences }}</td>
                <td>{{ abonnement.datePaiement ? abonnement.datePaiement|date('Y-m-d') : '' }}</td>
                <td>{{ abonnement.isValid ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_abonnement_show', {'id': abonnement.id}) }}"><i class="fas fa-eye fa-lg"></i></a>
                    <a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}"><i class="fas fa-edit fa-lg"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_abonnement_new') }}">GÃ©rer mon abonnement</a>
</div>
{% endblock %}
